<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">
    
    <!-- Main gradient -->
    <gradient
        android:angle="135"
        android:type="linear"
        android:startColor="@color/primary_dark"
        android:centerColor="@color/primary"
        android:endColor="@color/primary_light">
        
        <!-- Optional centerX and centerY for gradient positioning -->
        <centerX>0.3</centerX>
        <centerY>0.5</centerY>
    </gradient>

    <!-- Optional overlay pattern for texture -->
    <item>
        <bitmap
            android:src="@drawable/header_pattern"
            android:tileMode="repeat"
            android:alpha="0.05" />
    </item>

    <!-- Optional bottom edge shadow -->
    <item android:top="-2dp" android:left="-2dp" android:right="-2dp">
        <shape android:shape="rectangle">
            <stroke
                android:width="2dp"
                android:color="#22000000" />
        </shape>
    </item>

    <!-- Optional highlight for top edge -->
    <item android:bottom="-2dp" android:left="-2dp" android:right="-2dp">
        <shape android:shape="rectangle">
            <stroke
                android:width="1dp"
                android:color="#33FFFFFF" />
        </shape>
    </item>

    <!-- Optional subtle pattern overlay -->
    <gradient
        android:angle="90"
        android:startColor="#11FFFFFF"
        android:centerColor="#00FFFFFF"
        android:endColor="#11000000"
        android:type="linear">
        <centerX>0.5</centerX>
        <centerY>0.6</centerY>
    </gradient>
</shape>
