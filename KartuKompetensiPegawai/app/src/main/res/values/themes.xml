<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme -->
    <style name="Theme.KartuKompetensi" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary_dark</item>
        <item name="colorOnPrimary">@color/text_on_primary</item>

        <!-- Secondary brand color -->
        <item name="colorSecondary">@color/accent</item>
        <item name="colorSecondaryVariant">@color/accent_dark</item>
        <item name="colorOnSecondary">@color/text_on_accent</item>

        <!-- Status bar and navigation -->
        <item name="android:statusBarColor">@color/primary_dark</item>
        <item name="android:navigationBarColor">@color/surface</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="27">true</item>

        <!-- Background colors -->
        <item name="android:colorBackground">@color/background</item>
        <item name="colorSurface">@color/surface</item>
        <item name="colorOnSurface">@color/text_primary</item>
        <item name="colorOnBackground">@color/text_primary</item>

        <!-- Text appearances -->
        <item name="textAppearanceHeadline1">@style/TextAppearance.KartuKompetensi.Headline1</item>
        <item name="textAppearanceHeadline2">@style/TextAppearance.KartuKompetensi.Headline2</item>
        <item name="textAppearanceHeadline3">@style/TextAppearance.KartuKompetensi.Headline3</item>
        <item name="textAppearanceSubtitle1">@style/TextAppearance.KartuKompetensi.Subtitle1</item>
        <item name="textAppearanceSubtitle2">@style/TextAppearance.KartuKompetensi.Subtitle2</item>
        <item name="textAppearanceBody1">@style/TextAppearance.KartuKompetensi.Body1</item>
        <item name="textAppearanceBody2">@style/TextAppearance.KartuKompetensi.Body2</item>
        <item name="textAppearanceCaption">@style/TextAppearance.KartuKompetensi.Caption</item>

        <!-- Shape appearances -->
        <item name="shapeAppearanceSmallComponent">@style/ShapeAppearance.KartuKompetensi.SmallComponent</item>
        <item name="shapeAppearanceMediumComponent">@style/ShapeAppearance.KartuKompetensi.MediumComponent</item>
        <item name="shapeAppearanceLargeComponent">@style/ShapeAppearance.KartuKompetensi.LargeComponent</item>
    </style>

    <!-- Text Appearances -->
    <style name="TextAppearance.KartuKompetensi.Headline1" parent="TextAppearance.MaterialComponents.Headline1">
        <item name="android:textSize">@dimen/text_size_display_1</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:letterSpacing">-0.02</item>
    </style>

    <style name="TextAppearance.KartuKompetensi.Headline2" parent="TextAppearance.MaterialComponents.Headline2">
        <item name="android:textSize">@dimen/text_size_headline</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <style name="TextAppearance.KartuKompetensi.Headline3" parent="TextAppearance.MaterialComponents.Headline3">
        <item name="android:textSize">@dimen/text_size_title</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <style name="TextAppearance.KartuKompetensi.Subtitle1" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="android:textSize">@dimen/text_size_subtitle</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <style name="TextAppearance.KartuKompetensi.Subtitle2" parent="TextAppearance.MaterialComponents.Subtitle2">
        <item name="android:textSize">@dimen/text_size_body</item>
        <item name="android:textColor">@color/text_secondary</item>
    </style>

    <style name="TextAppearance.KartuKompetensi.Body1" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textSize">@dimen/text_size_body</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <style name="TextAppearance.KartuKompetensi.Body2" parent="TextAppearance.MaterialComponents.Body2">
        <item name="android:textSize">@dimen/text_size_caption</item>
        <item name="android:textColor">@color/text_secondary</item>
    </style>

    <style name="TextAppearance.KartuKompetensi.Caption" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:textSize">@dimen/text_size_caption</item>
        <item name="android:textColor">@color/text_secondary</item>
    </style>

    <!-- Shape Appearances -->
    <style name="ShapeAppearance.KartuKompetensi.SmallComponent" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">4dp</item>
    </style>

    <style name="ShapeAppearance.KartuKompetensi.MediumComponent" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">8dp</item>
    </style>

    <style name="ShapeAppearance.KartuKompetensi.LargeComponent" parent="ShapeAppearance.MaterialComponents.LargeComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">12dp</item>
    </style>

    <!-- Widget Styles -->
    <style name="Widget.KartuKompetensi.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:minHeight">@dimen/button_height</item>
        <item name="android:paddingStart">@dimen/button_padding_horizontal</item>
        <item name="android:paddingEnd">@dimen/button_padding_horizontal</item>
        <item name="cornerRadius">@dimen/button_corner_radius</item>
    </style>

    <style name="Widget.KartuKompetensi.Card" parent="Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">@dimen/card_corner_radius</item>
        <item name="cardElevation">@dimen/card_elevation</item>
        <item name="contentPadding">@dimen/card_content_padding</item>
    </style>

    <style name="Widget.KartuKompetensi.CompetencyCard" parent="Widget.KartuKompetensi.Card">
        <item name="android:layout_height">@dimen/competency_card_height</item>
        <item name="cardBackgroundColor">@color/surface</item>
    </style>

    <style name="Widget.KartuKompetensi.ProgressBar" parent="Widget.AppCompat.ProgressBar.Horizontal">
        <item name="android:progressDrawable">@drawable/progress_bar_background</item>
        <item name="android:minHeight">@dimen/progress_bar_height</item>
        <item name="android:maxHeight">@dimen/progress_bar_height</item>
    </style>
</resources>
